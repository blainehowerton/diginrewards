<div class="jumbotron">
      <div class="container">
        <h1>Transaction Processing</h1>
        <p>Showing transactions and reports. </p>
      </div>
    </div>
<div class="container">
<!-- UPDATE NOTICE -->
  <p id="notice"><%= notice %></p>
<!-- ACCORDION INITIALIZE -->
<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
<!-- 1ST ACCORDION VIEW FOR PENDING TRANSACTIONS-->
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          Pending Transactions
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">
<!-- TABLE FOR PENDING TRANSACTIONS (VIEW ONLY) -->
<div class="table-responsive">
<table class="table">
    <thead>
      <tr>
        <th>Amount</th>
        <th>User ID</th>
        <th>Retailer</th>
        <th>Cause</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <% if transaction.approved? %>
          <% else %>
          <td>$<%= transaction.amount %></td>
          <td><%= transaction.user.username %></td>
          <td><%= transaction.retailer.name %></td>
          <td><%= transaction.cause.name %></td>
          <!-- OPTIONAL LINKS IN THE TABLE - DELETE COMMENT TO PUT THEM THERE
          <td><%= link_to 'View', transaction %></td>
          <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
          <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<!-- END OF PENDING TRANSACTION VIEW TABLE -->
<!-- Button trigger modal FOR VIEW AND EDIT TRANSACTIONS -->
<td><button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  View and Edit Pending Transactions
</button></td>
<!-- Modal for pending transactions, VIEW AND EDIT-->
<div class="modal fade bs-example-modal-lg" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Your Current Pending Transactions</h4>
      </div>
      <div class="modal-body">
      <% @transactions.each do |transaction| %>
            <% if transaction.approved? %>
            <% else %>
              <%= image_tag transaction.image.url(:medium) %>
              <br>
              Transaction ID:  <%= transaction.id %>
              <br>
              Transaction Amount:  $<%= transaction.amount %>
              <br>
              User Name:  <%= transaction.user.username %>
              <br>
              Retailer:  <%= transaction.retailer.name %>
              <br>
              Cause:  <%= transaction.cause.name %>
              <br>
              <!-- OPTIONAL VIEW LINK IN THE MODAL, DELETE COMMENT TO PUT IT IN THE LIST
              <%= link_to 'View', transaction %> <br> -->
              <%= link_to 'Edit', edit_transaction_path(transaction) %>     |
              <%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %>
              <br>
              <br>
              <br>
            <% end %>
      <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-- END OF PENDING TRANSACTIONS VIEW AND EDIT MODAL -->
      </div>
    </div>
  </div>
  <!-- END OF 1ST ACCORDION PANEL -->
