<%= panel title: 'CAUSE INFORMATION' do %>
<div class='panel-body'>
  <p>You are currently signed up to donate to  <b>"<%= cause.name %>"</b> as your preferred cause.  If you would like to change your cause, edit it in your <%= link_to 'User Profile', '/users/edit' %>.  Currently available causes are listed below.</p>


    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
          <th>Name</th>
          <th>City</th>
          <th>State</th><tr>
          </tr>
        </thead>
        <tbody>
          <% @causes.each do |cause| %>
          <tr>
          <td><%= cause.name %></td>
          <td><%= cause.city %></td>
          <td><%= cause.state %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

<center>
    <a href="#" class="btn btn-primary" role="button">REQUEST TO ADD A CAUSE</a>
</center>
</div>
<% end %>


<%= panel title: 'LIST OF CURRENT BUSINESSES IN THE PROGRAM' do %>
<div class='panel-body'>
  <div class="table-responsive">
  <table class="table table-striped">
        <thead>
          <tr>
              <th>Name</th>
              <th>City</th>
              <th>State</th>
              <th>Cash %</th>
              <th>Cause %</th><tr>
          </tr>
        </thead>
        <tbody>
              <% @retailers.each do |retailer| %>
              <tr>
                <td><%= retailer.name %></td>
                <td><%= retailer.city %></td>
                <td><%= retailer.state %></td>
                <td><%= number_to_percentage(retailer.user_split * 100, precision:0) %></td>
                <td><%= number_to_percentage(retailer.cause_split * 100, precision:0) %></td>
              </tr>
            <% end %>
        </tbody>
      </table>

    <center>
    <p><a href="http://rewards.digin.club/index.php/business-directory/?action=search" class="btn btn-primary" role="button">SEARCH FOR BUSINESS INFORMATION</a></p>

    <a href="#" class="btn btn-primary" role="button">REQUEST TO ADD A BUSINESS</a>
    </center><br>
</div>
</div>
<% end %>





