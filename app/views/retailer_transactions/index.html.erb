<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/resources/demos/style.css">

</head>
<body>

<div class="jumbotron">
      <div class="container">
        <h1>Retailer Transactions</h1>
        <p>Viewing all transaction balances. <%= notice %></p>
      </div>
    </div>

<div class="container">

<div class="table-responsive">
  <table class="table">
  <thead>
  <tr>
  	<th>Retailer ID</th>
  	<th>Retailer Name</th>
  	<th>Deposits</th>
  	<th>Withdrawls</th>
  	<th>Balance</th>
  	<th colspan="3"></th>
      </tr>
    </thead>
  <tbody>
  <% @retailer_balances.each do |item| %>
	    <tr>
	      <td><%= item.retailer_id %></td>
	      <td></td>
	      <!-- <td><%= @retailer.name = Retailer.find_by name:(item.retailer_id) %></td> -->
	      <td><%= number_to_currency(item.total_credits) %></td>
	      <td><%= number_to_currency(item.total_debits) %></td>
	      <td><%= number_to_currency(item.balance = item.total_credits.to_s.to_d - item.total_debits.to_s.to_d) %></td>
    <% end %>
  </tr>
  </tbody>
</table>
</div>

</div>

<br>
<br>

<%= yield %>

</body>

<hr>

</html>