<% if admin_signed_in? %>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


<div class="jumbotron">
      <div class="container">
        <h1>Process Transactions</h1>
        <p>All approved transactions have been processed and the Que has been emptied.</p>
      </div>
    </div>
<div class="container">
  <!-- UPDATE NOTICE -->
<p><%= notice %></p>

<p><a href="/retailer_transactions/new" class="btn btn-primary btn-lg active" role="button">Create Retailer Transaction</a></p>
<p><a href="/cause_transactions/new" class="btn btn-primary btn-lg active" role="button">Create Cause Transaction</a></p>
<p><a href="/rewards_transactions/new" class="btn btn-primary btn-lg active" role="button">Create Rewards Program Transaction</a></p>



<div class="container">
<hr>
<%= link_to 'Home', "/" %> | 
<%= link_to 'Transaction Home', "/transactions" %> |  
<%= link_to 'New Transaction', new_transaction_path %> | 
<%= link_to 'Onboarding', "/onboarding" %> | <%= link_to 'Database Admin', "/admin" %>
<br>

<!-- Show error if both a user and admin aren't logged in -->
<% else %>
<div class="jumbotron">
      <div class="container">
        <h1>Transaction Processing</h1>
        <p>Showing transactions and reports. </p>
      </div>
    </div>
<div class="container">
You are not authorized to view this page.  You must be logged in as an admin and a user to continue.<br>
<% if user_signed_in? %>
      User account (<%= current_user.username %>) IS signed in.  
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
        <% else %>
        User account is NOT signed in.
        <%= link_to('Login', new_user_session_path)  %>  
        <% end %><br>
      <!-- Admin Account Login/Logout -->
      <% if admin_signed_in? %>
      Admin account (<%= current_admin.email %>) IS signed in. 
      <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>        
        <% else %>
        Admin account IS NOT signed in.
        <%= link_to('Login', new_admin_session_path)  %>  
        <% end %><br>

<hr>
<%= link_to 'Home', "/" %>
<% end %>
</div>


