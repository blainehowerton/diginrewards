<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/resources/demos/style.css">

</head>
<body>

<div class="jumbotron">
      <div class="container">
        <h1>Onboarding</h1>
        <p> You are in the onboarding section. <%= notice %></p>
      </div>
    </div>

<div class="container">
<p><%= link_to 'New Onboard', "onboarding/new" %></p>

<p>LIST ALL USERS</p>

<p>LIST CURRENT RETAILERS</p>

<table class="table">
    <thead>
      <tr>
        <th>Retailer Name</th>
        <th>Paypal ID</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @retailers.each do |retailer| %>
        <tr>
          <td><%= retailer.name %></td>
          <td><%= retailer.paypalID %></td>
          <td><%= retailer.contact_email %></td>
          <td><%= retailer.phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<p>LIST CURRENT CAUSES</p>

<p> LIST ALL TRANSACTIONS</p>
	<table class="table">
    <thead>
      <tr>
        <th>Amount</th>
        <th>User ID</th>
        <th>Retailer</th>
        <th>Cause</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td>$<%= transaction.amount %></td>
          <td><%= transaction.user.username %></td>
          <td><%= transaction.retailer.name %></td>
          <td><%= transaction.cause.name %></td>
          <!-- OPTIONAL LINKS IN THE TABLE - DELETE COMMENT TO PUT THEM THERE
          <td><%= link_to 'View', transaction %></td>
          <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
          <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>

<%= yield %>

</body>

<hr>

</html>