<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>


<div class="jumbotron">
      <div class="container">
        <h1>Onboarding</h1>
        <p> You are in the onboarding section.</p>
      </div>
    </div>

<div class="container">
 <%= notice %><br>
 <!--  User Account Login/Logout -->
      <% if user_signed_in? %>
      User account (<%= current_user.username %>) IS signed in.  
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
        <% else %>
        User account is NOT signed in.
        <%= link_to('Login', new_user_session_path)  %>  
        <% end %><br>
      <!-- Admin Account Login/Logout -->
      <% if admin_signed_in? %>
      Admin account (<%= current_admin.email %>) IS signed in. 
      <%= link_to('Logout', destroy_admin_session_path, :method => :delete) %>        
        <% else %>
        Admin account IS NOT signed in.
        <%= link_to('Login', new_admin_session_path)  %>  
        <% end %><br><br>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
      <h4 class="panel-title">
        <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Retailers
        </a>
      </h4>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="panel-body">

<table class="table">
    <thead>
      <tr>
        <th>Retailer Name</th>
        <th>Paypal ID</th>
        <th>Email</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @retailers.each do |retailer| %>
        <tr>
          <td><%= retailer.name %></td>
          <td><%= retailer.paypalID %></td>
          <td><%= retailer.contact_email %></td>
          <td><%= retailer.phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingTwo">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
          Causes
        </a>
      </h4>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
      <div class="panel-body">

<table class="table">
    <thead>
      <tr>
        <th>Cause Name</th>
        <th>Paypal ID</th>
        <th>Phone</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @causes.each do |cause| %>
        <tr>
          <td><%= cause.name %></td>
          <td><%= cause.paypalID %></td>
          <td><%= cause.phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingThree">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          Users
        </a>
      </h4>
    </div>
    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">

<table class="table">
    <thead>
      <tr>
        <th>User Name</th>
        <th>Paypal ID</th>
        <th>Cause ID</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.paypalID %></td>
          <td><%= user.cause_id %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
      </div>
    </div>
  </div>
</div>

<a href="retailers/new" class="btn btn-primary btn-lg active" role="button">New Retailer</a>
<a href="causes/new" class="btn btn-primary btn-lg active" role="button">New Cause</a>
<a href="/users/new" class="btn btn-primary btn-lg active" role="button">New User</a>

<%= yield %>

</body>

